@if (UseCustomLayout)
{
    <CascadingValue Value="this">
        @Content
    </CascadingValue>
}
else if(UseDefaultLayout)
{
     <div class="blazored-modal-container @Position @OverlayCustomClass @OverlayAnimationClass"
         @ref="_modalReference" 
         @onclick="HandleBackgroundClick">

        <FocusTrap @ref="_focusTrap" IsActive="ActivateFocusTrap">
            <div class="@ModalClass" role="dialog" aria-modal="true" @onclick:stopPropagation="true">
                @if (!HideHeader)
                {
                    <div class="header">
                        <h3 class="title">@Title</h3>
                        @if (!HideCloseButton)
                        {
                            <button type="button" class="close" aria-label="close" @onclick="() => CancelAsync()" @attributes="@_closeBtnAttributes"> 
                                <span>&times;</span>
                            </button>
                        }
                    </div>
                }
                <div class="content">
                    <CascadingValue Value="this">
                        @Content
                    </CascadingValue>
                </div>
            </div>
        </FocusTrap>
        
    </div>
}
else
{
	<!--begin::Modal - Create App-->
	<div class="modal show blazored-modal-container @Position @OverlayCustomClass @OverlayAnimationClass"
		@ref="_modalReference"
		@onclick="HandleBackgroundClick" style="display:block!important">
		<FocusTrap @ref="_focusTrap" IsActive="ActivateFocusTrap">
		<div class="modal-dialog modal-dialog-centered @ModalWidth @ModalClass" role="dialog" aria-modal="true" @onclick:stopPropagation="true">
       
		<!--begin::Modal dialog-->	
			<!--begin::Modal content-->
			<div class="modal-content">
				<!--begin::Modal header-->
				@if (!HideHeader)
				{
					<div class="modal-header">
						<!--begin::Modal title-->
					<h2>@Title</h2>
					<!--end::Modal title-->
					<!--begin::Close-->
					@if (!HideCloseButton)
					{
						<div class="btn btn-sm btn-icon btn-active-color-primary" data-bs-dismiss="modal" @onclick="() => CancelAsync()" @attributes="@_closeBtnAttributes">
							<!--begin::Svg Icon | path: icons/duotune/arrows/arr061.svg-->
							<span class="svg-icon svg-icon-1">
								<svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
									<rect opacity="0.5" x="6" y="17.3137" width="16" height="2" rx="1" transform="rotate(-45 6 17.3137)" fill="currentColor" />
									<rect x="7.41422" y="6" width="16" height="2" rx="1" transform="rotate(45 7.41422 6)" fill="currentColor" />
								</svg>
							</span>
							<!--end::Svg Icon-->
						</div>
					}
					<!--end::Close-->
				</div>
				}
				<!--end::Modal header-->				
				<!--begin::Modal body-->
                <CascadingValue Value="this">
                    @Content
                </CascadingValue>
                <!--end::Modal body-->
			</div>
			<!--end::Modal content-->		
		</div>       
		<!--end::Modal dialog-->
		</FocusTrap>
	</div>
}