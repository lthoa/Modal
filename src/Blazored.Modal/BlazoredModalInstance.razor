@if (UseCustomLayout)
{
    <CascadingValue Value="this">
        @Content
    </CascadingValue>
}
else if(UseDefaultLayout)
{
     <div class="blazored-modal-container @Position @OverlayCustomClass @OverlayAnimationClass"
         @ref="_modalReference" 
         @onclick="HandleBackgroundClick">

        <FocusTrap @ref="_focusTrap" IsActive="ActivateFocusTrap">
            <div class="@ModalClass" role="dialog" aria-modal="true" @onclick:stopPropagation="true">
                @if (!HideHeader)
                {
                    <div class="header">
                        <h3 class="title">@Title</h3>
                        @if (!HideCloseButton)
                        {
                            <button type="button" class="close" aria-label="close" @onclick="() => CancelAsync()" @attributes="@_closeBtnAttributes"> 
                                <span>&times;</span>
                            </button>
                        }
                    </div>
                }
                <div class="content">
                    <CascadingValue Value="this">
                        @Content
                    </CascadingValue>
                </div>
            </div>
        </FocusTrap>
        
    </div>
}
else
{
	<!--begin::Modal - Create App-->
	<div class="modal show blazored-modal-container @Position @OverlayCustomClass @OverlayAnimationClass"
		@ref="_modalReference"
		@onclick="HandleBackgroundClick" style="display:block!important">
		<FocusTrap @ref="_focusTrap" IsActive="ActivateFocusTrap">
		<div class="modal-dialog modal-dialog-centered @ModalWidth @ModalClass" role="dialog" aria-modal="true" @onclick:stopPropagation="true">
       
		<!--begin::Modal dialog-->	
			<!--begin::Modal content-->
			<div class="modal-content">
				<!--begin::Modal header-->
				@if (!HideHeader)
				{
					<div class="modal-header">
						<!--begin::Modal title-->
					    <h2>@Title</h2>
					    <!--end::Modal title-->
					    <!--begin::Close-->
					    @if (!HideCloseButton)
					    {
                            <div class="btn btn-icon btn-sm btn-active-icon-primary" @onclick="() => CancelAsync()" @attributes="@_closeBtnAttributes">
							    <i class="ki-duotone ki-cross fs-1"><span class="path1"></span><span class="path2"></span></i>
						    </div>
					    }
					    <!--end::Close-->
				    </div>
				}
				<!--end::Modal header-->				
				<!--begin::Modal body-->
                <CascadingValue Value="this">
                    @Content
                </CascadingValue>
                <!--end::Modal body-->
			</div>
			<!--end::Modal content-->		
		</div>       
		<!--end::Modal dialog-->
		</FocusTrap>
	</div>
}